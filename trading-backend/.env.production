# Production Environment Configuration

# ⚠️ CRITICAL: NEVER commit this file to version control
# ⚠️ Use environment-specific secrets and keys
# ⚠️ Enable all security features

# Application
APP_NAME="TradingBot AI Backend"
DEBUG=False  # MUST be False in production
API_V1_PREFIX="/api/v1"
ENVIRONMENT=production

# Database (Use production database with strong credentials)
DATABASE_URL="postgresql://prod_user:STRONG_PASSWORD@db.example.com:5432/tradingbot_prod"

# Binance API (Use MAINNET with REAL funds - BE CAREFUL)
BINANCE_API_KEY="your_production_api_key"
BINANCE_API_SECRET="your_production_api_secret"
BINANCE_TESTNET=False  # MAINNET mode

# AI APIs (Use production tier keys with higher rate limits)
OPENAI_API_KEY="sk-prod-..."
ANTHROPIC_API_KEY="sk-ant-prod-..."

# Redis (Use production Redis instance)
REDIS_URL="redis://:REDIS_PASSWORD@redis.example.com:6379/0"

# Security (⚠️ GENERATE FRESH KEYS FOR PRODUCTION)
SECRET_KEY="GENERATE_UNIQUE_SECRET_KEY_openssl_rand_hex_32"
WEBHOOK_SECRET="GENERATE_UNIQUE_WEBHOOK_SECRET_secrets_token_urlsafe_32"
ENCRYPTION_KEY="GENERATE_UNIQUE_ENCRYPTION_KEY_fernet_generate_key"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60  # 1 hour for security

# Trading Parameters (Use production-ready values)
DEFAULT_LEVERAGE=3
MAX_POSITION_SIZE_PCT=0.10  # 10% maximum
ATR_PERIOD=14

# AI Ensemble Weights
ML_WEIGHT=0.40
GPT4_WEIGHT=0.25
LLAMA_WEIGHT=0.25
TA_WEIGHT=0.10

# Entry/Exit Thresholds
MIN_PROBABILITY=0.80
MIN_CONFIDENCE=0.70
MIN_AGREEMENT=0.70

# Logging
LOG_LEVEL=INFO  # Use INFO in production (not DEBUG)

# Security Settings
ALLOWED_HOSTS=["api.yourdomain.com"]  # Restrict to specific domains
ENABLE_HTTPS_REDIRECT=True
ENABLE_CORS=True
CORS_ORIGINS=["https://yourdomain.com"]  # Only your frontend domain

# Monitoring & Alerts
SENTRY_DSN=""  # Add Sentry for error tracking (optional)
ENABLE_METRICS=True  # Enable Prometheus metrics (optional)

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60  # Max 60 requests per minute per user

# Production Checklist:
# [ ] Generated fresh SECRET_KEY, WEBHOOK_SECRET, ENCRYPTION_KEY
# [ ] Configured strong database password
# [ ] Restricted API key permissions on exchanges (no withdrawals)
# [ ] Enabled IP whitelisting on exchange API keys
# [ ] Set up HTTPS with valid SSL certificate
# [ ] Configured firewall rules
# [ ] Set up monitoring and alerting
# [ ] Backed up database
# [ ] Tested disaster recovery procedures
# [ ] Reviewed logs for security events
# [ ] Set up regular security audits
