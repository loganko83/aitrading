# Monitoring Stack Environment Variables
# Copy this file to .env and fill in your actual values

# Database (PostgreSQL Exporter)
POSTGRES_USER=tradingbot
POSTGRES_PASSWORD=tradingbot_password
POSTGRES_DB=tradingbot

# Redis (Redis Exporter)
REDIS_PASSWORD=

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# ============================================
# ALERT NOTIFICATION CHANNELS (Optional)
# ============================================

# Slack Integration
# 1. Create webhook: https://api.slack.com/messaging/webhooks
# 2. Get URL: https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
SLACK_WEBHOOK_URL=

# Telegram Integration
# 1. Create bot with @BotFather: https://t.me/BotFather
# 2. Get bot token: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# 3. Get chat ID by sending message to bot, then:
#    curl https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_TRADING_CHAT_ID=

# PagerDuty Integration (Optional)
# Get service key from: https://YOUR_SUBDOMAIN.pagerduty.com/services
PAGERDUTY_SERVICE_KEY=

# Email Notifications (Gmail)
# 1. Enable 2FA: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
SMTP_USERNAME=
SMTP_PASSWORD=
