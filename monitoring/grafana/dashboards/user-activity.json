{
  "title": "User Activity",
  "uid": "user-activity",
  "tags": [
    "user",
    "activity"
  ],
  "editable": true,
  "refresh": "1m",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "title": "Active Users",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "count(count by (user_id) (portfolio_value_usd))"
        }
      ]
    },
    {
      "title": "Total Trades (24h)",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(increase(trades_total[24h]))"
        }
      ]
    },
    {
      "title": "Trading Volume (24h)",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(increase(trading_volume_usd[24h]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        }
      }
    },
    {
      "title": "Average Win Rate",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "100 * sum(increase(orders_total{status=\"success\"}[24h])) / sum(increase(orders_total[24h]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "title": "Portfolio Values by User",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "portfolio_value_usd",
          "legendFormat": "User {{user_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        }
      }
    },
    {
      "title": "Active Positions by Exchange",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "active_positions",
          "legendFormat": "{{exchange}} - {{symbol}}"
        }
      ]
    },
    {
      "title": "API Key Usage",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum by (exchange) (increase(orders_total[24h]))",
          "format": "table"
        }
      ]
    },
    {
      "title": "User Performance Metrics",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "portfolio_value_usd",
          "format": "table"
        },
        {
          "expr": "portfolio_drawdown_percent",
          "format": "table"
        }
      ]
    }
  ]
}