{
  "title": "Trading Overview",
  "uid": "trading-overview",
  "tags": [
    "trading",
    "overview"
  ],
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "title": "Total Orders (1h)",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(increase(orders_total[1h]))"
        }
      ]
    },
    {
      "title": "Order Success Rate",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "100 * sum(increase(orders_total{status=\"success\"}[1h])) / sum(increase(orders_total[1h]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "title": "Orders per Minute",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(orders_total[5m])",
          "legendFormat": "{{exchange}} - {{action}}"
        }
      ]
    },
    {
      "title": "Exchange API Status",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "exchange_api_up",
          "legendFormat": "{{exchange}}"
        }
      ]
    },
    {
      "title": "Portfolio Value (USD)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 6,
        "y": 8
      },
      "targets": [
        {
          "expr": "portfolio_value_usd",
          "legendFormat": "User {{user_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        }
      }
    },
    {
      "title": "Portfolio Drawdown",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 8
      },
      "targets": [
        {
          "expr": "portfolio_drawdown_percent",
          "legendFormat": "User {{user_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 0
        }
      }
    }
  ]
}